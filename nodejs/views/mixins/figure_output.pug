// mixins/figure_output
mixin figure_output(image, secondary_files, workflow_svg, length)
  div(class='workflow-output')
    div(class='tab')
      button(class='tablinks' onclick="edit_workflow(event, 'Output-" + image + "')") Primary Output  
      button(class='tablinks' onclick="edit_workflow(event, 'SecondaryOutput-" + image + "')") Secondary Output
      button(class='tablinks' onclick="edit_workflow(event, 'Show-" + image + "')") Show workflow
      button(class='tablinks' onclick="edit_workflow(event, 'job-" + image + "')") Run workflow
    div(class='tabcontent', id="Output-" + image, style="display: block;")
      div(id='index')
        img(src=image)
